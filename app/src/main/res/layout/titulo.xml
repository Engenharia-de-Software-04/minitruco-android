<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1B8E3C">

    <ImageView
        android:id="@+id/menuprincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="logo do miniTruco"
        android:src="@drawable/menuprincipal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/url_site"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:gravity="center"
            android:linksClickable="true"
            android:text="cd@pobox.com\nhttps://chester.me"
            android:textColor="#FF3F28A4"
            android:textColorLink="#FF3F28A4"
            android:textSize="12sp"
            android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewModo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4sp"
                android:text="Truco Paulista"
                android:textColor="@android:color/white"
                android:textColorLink="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnModoPaulista"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/sp"
                    android:tag="P"
                    android:onClick="modoButtonClickHandler"
                    android:scaleType="fitCenter" />

                <ImageButton
                    android:id="@+id/btnModoMineiro"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/mg"
                    android:tag="M"
                    android:onClick="modoButtonClickHandler"
                    android:scaleType="fitCenter" />

                <ImageButton
                    android:id="@+id/btnModoLimpo"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/limpo"
                    android:tag="L"
                    android:onClick="modoButtonClickHandler"
                    android:scaleType="fitCenter" />

            </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnJogar"
                android:layout_width="120sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="jogarClickHandler"
                android:text="Jogar"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnInternet"
                android:layout_width="120sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="internetButtonClickHandler"
                android:visibility="gone"
                android:text="Internet" />

            <LinearLayout
                android:id="@+id/btnBluetoothContainer"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBluetooth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@android:drawable/stat_sys_data_bluetooth"
                    android:onClick="bluetoothButtonClickHandler"
                    android:drawableStart="@android:drawable/stat_sys_data_bluetooth" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnOpcoes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@android:drawable/ic_menu_preferences"
                    android:onClick="opcoesButtonClickHandler"
                    android:paddingLeft="9sp"
                    android:drawableStart="@android:drawable/ic_menu_preferences"
                    android:paddingStart="9sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutTruco"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B8E3C"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry,HardcodedText,RtlHardcoded,UsingOnClickInXml,NestedWeights,ContentDescription">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        tools:ignore="InefficientWeight">

        <me.chester.minitruco.android.MesaView
            android:id="@+id/MesaView01"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO remover esses campos, mas tem que resolver
                 onde ancorar os botões, de repente fazer isso
                 quando for converter eles para elementos da
                 MesaView; vide
                 https://github.com/chesterbr/minitruco-android/issues/21 -->

            <TextView
                android:id="@+id/textview_eles"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="4dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textview_nos"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:gravity="right"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/btnAumento"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_above="@id/textview_nos"
                android:onClick="aumentoClickHandler"
                android:text="yyyy"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnAbertaFechada"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_above="@id/textview_eles"
                android:layout_alignParentRight="true"
                android:onClick="abertaFechadaClickHandler"
                android:text="xxxxx"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnNovaPartida"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="novaPartidaClickHandler"
            android:visibility="gone"
            android:text="Nova Partida" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layoutPlacar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:background="@drawable/borda_placar"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="mão"
                android:textColor="#000000"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageValorMao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/vale1" />

                <ImageView
                    android:id="@+id/imageResultadoRodada1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placarrodada1" />

                <ImageView
                    android:id="@+id/imageResultadoRodada2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placarrodada2" />

                <ImageView
                    android:id="@+id/imageResultadoRodada3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/placarrodada3" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPlacarPartida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:paddingHorizontal="6dp"
            android:gravity="center"
            android:background="@drawable/borda_placar"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewNos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=" 9"
                android:layout_weight="3"
                android:gravity="right|center"
                android:textColor="#000000"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="1sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:layout_weight="2"
                android:textColor="#000000"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:gravity="center" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRivais"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="10"
                android:layout_weight="3"
                android:gravity="left|center"
                android:textColor="#000000"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="1sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPlacarPartidas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:background="@drawable/borda_placar"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="partidas"
                android:textSize="11sp"
                android:textColor="#000000" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewPartidas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="1sp"
                android:text="2 - 1"
                android:textColor="#000000" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
